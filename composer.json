{
    "name": "concept-labs/dbal",
    "description": "(C)oncept-Labs DBAL",
    "keywords": ["php","dbal", "database abstract language"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Viktor Halytskyi",
            "email": "concept.galitsky@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "concept-labs/exception": "^1",
        "concept-labs/config": "^2",
        "concept-labs/expression": "^1",
        "concept-labs/dbc-pdo": "^1"
    },
    "autoload": {
        "psr-4": {
            "Concept\\DBAL\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "pestphp/pest": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "concept": {
            "include": "concept.json"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:pest": "pest",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
   

}